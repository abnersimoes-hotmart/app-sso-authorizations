{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "checkJs": false,
    "jsx": "react",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./",
    "removeComments": true,
    "strict": true,
    "noImplicitAny": false,
    "strictPropertyInitialization": false,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "api/*": ["src/api/*"],
      "config/*": ["src/config/*"],
      "components/*": ["src/components/*"],
      "utils/*": ["src/utils/*"],
      "ducks/*": ["src/ducks/*"],
      "services/*": ["src/services/*"],
      "state/*": ["src/state/*"],
      "hooks/*": ["src/hooks/*"],
      "pages/*": ["src/pages/*"],
      "root/*": ["./"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.spec.ts"],
  "no-console": [true, "log", "error"]
}
